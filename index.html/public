    <script>
        let testCount = 0;
        
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            // Check test limit
            if (testCount >= 1) {
                alert('ðŸ”’ Upgrade to Premium\n\nGet unlimited hook testing for just Â£9.97/month\n\nâœ“ Unlimited tests\nâœ“ Advanced analysis\nâœ“ Export reports');
                return;
            }
            
            startAnalysis();
        });
        
        function startAnalysis() {
            // Hide upload, show processing
            document.getElementById('uploadSection').classList.add('hidden');
            document.getElementById('processingSection').classList.remove('hidden');
            
            // Simulate analysis (2-4 seconds)
            const analysisTime = Math.random() * 2000 + 2000;
            
            setTimeout(() => {
                showResults();
            }, analysisTime);
        }
        
        function showResults() {
            // Generate result (60% pass rate for demo)
            const isPass = Math.random() > 0.4;
            
            // Set verdict
            const verdictEl = document.getElementById('verdict');
            verdictEl.textContent = isPass ? 'PASS' : 'FAIL';
            verdictEl.className = `text-7xl font-black mb-6 ${isPass ? 'result-pass' : 'result-fail'}`;
            
            // Set fix message
            const passFixes = [
                'Strong hook detected. Keep this energy throughout.',
                'Excellent opening. Your hook has scroll-stopping power.',
                'Solid start. This will grab attention immediately.'
            ];
            
            const failFixes = [
                'Cut the intro. Start with your strongest element immediately.',
                'Boost the lead vocal or main instrument in the mix.',
                'Remove dead air. Every millisecond counts in the first 5 seconds.',
                'Brighten the mix for phone speakers and earbuds.',
                'Increase energy. Hook needs more punch to stop scrolling.',
                'Lead with rhythm. Get the beat hitting within 2 seconds.',
                'Tighten arrangement. Remove any empty space at the start.'
            ];
            
            const fixes = isPass ? passFixes : failFixes;
            document.getElementById('fixMessage').textContent = fixes[Math.floor(Math.random() * fixes.length)];
            
            // Show results, hide processing
            document.getElementById('processingSection').classList.add('hidden');
            document.getElementById('resultsSection').classList.remove('hidden');
            
            // Update test count and show warning
            testCount++;
            if (testCount >= 1) {
                document.getElementById('warningText').classList.remove('hidden');
            }
        }
        
        function runNewTest() {
            // Reset to upload state
            document.getElementById('resultsSection').classList.add('hidden');
            document.getElementById('uploadSection').classList.remove('hidden');
            document.getElementById('fileInput').value = '';
        }
        
        // Prevent default drag/drop behavior
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            document.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
    </script>
